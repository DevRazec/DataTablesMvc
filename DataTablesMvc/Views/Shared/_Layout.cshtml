<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
    @Scripts.Render("~/bundles/modernizr")

    <!-- DataTable Plugin -->
    <link rel="stylesheet" href="~/Content/css/jquery.dataTables.min.css" />
    <link href="~/Content/datatables.extensions/Responsive/css/dataTables.responsive.css" rel="stylesheet" />

</head>
<body>

    <div class="page-container">

        <div class="left-content">
            <div class="inner-content">

                <div class="header-section">

                    <div class="top_bg">

                        <div class="header_top">
                            <div class="top_right">
                                <ul>
                                    <li><a href="#">help</a></li>|
                                    <li><a href="#">Contact</a></li>|
                                    <li><a href="#">Information</a></li>
                                </ul>
                            </div>
                            <div class="top_left">
                                <h2><span></span> Call Support : +55 19 9 9234 7437</h2>
                            </div>
                            <div class="clearfix"> </div>
                        </div>

                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="content">
                    <div class="grids">
                        <div class="women_main">

                            @RenderBody()

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidebar-menu">
            <header class="logo1">
                <a href="#" class="sidebar-icon"> <span class="fa fa-bars"></span> </a>
            </header>
            <div style="border-top:1px ridge rgba(255, 255, 255, 0.15)"></div>
            <div class="menu">
                <ul id="menu">

                    <li class="@Url.IsLinkActive("Index", "Home")">
                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i><span>Home</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Customers")">
                        <a href="@Url.Action("Index", "Customers")"><i class="fa fa-users"></i><span>Customers</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Orders")">
                        <a href="@Url.Action("Index", "Orders")"><i class="fa fa-shopping-cart"></i><span>Orders</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "OrderDetails")">
                        <a href="@Url.Action("Index", "OrderDetails")"><i class="fa fa-file-text-o"></i><span>Order Details</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Products")">
                        <a href="@Url.Action("Index", "Products")"><i class="fa fa-gift"></i><span>Products</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Categories")">
                        <a href="@Url.Action("Index", "Categories")"><i class="fa fa-th"></i><span>Categories</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Shippers")">
                        <a href="@Url.Action("Index", "Shippers")"><i class="fa fa-truck"></i><span>Shippers</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("Index", "Countries")">
                        <a href="@Url.Action("Index", "Countries")"><i class="fa fa-flag"></i><span>Countries</span></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- DataTable Plugin -->
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables.extensions/Responsive/js/dataTables.responsive.min.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        var toggle = true;

        $(".sidebar-icon").click(function () {
            if (toggle) {
                $(".page-container").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
                $("#menu span").css({ "position": "absolute" });
            }
            else {
                $(".page-container").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
                setTimeout(function () {
                    $("#menu span").css({ "position": "relative" });
                }, 400);
            }

            toggle = !toggle;
        });
    </script>

</body>
</html>
